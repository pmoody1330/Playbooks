sudo apt install software-properties-common
sudo apt-add-repository ppa:ansible/ansible
sudo apt install update
sudo apt install ansible
cd ./Documents/Playbooks
git add local.yml
git commit -m 'Playbook'
git push origin master
sudo ansible-pull -U https://github.com/pmoody1330/Playbooks.git


#run a local yaml file
ansible-playbook -c local  admin.yml

#Admin.yml references the ica client this must be downloaded and put in the correct path - check the version number on the file too.

